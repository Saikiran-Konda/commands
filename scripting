## For loop
#!/bin/bash

for i in 1 2 3 4 5
do
echo "welcome $i times"
done

## Do While
#!/bin/bash

while [ condition ]
do
  command 1
  command 2
done

#!/bin/bash

count=0
num=10
while [ $count -lt 10 ]
do  
  echo
  echo $num seconds left to stop the process $1
  echo
  sleep 1

num=`expr $num - 1`         ##expr is expression
count=`expr $count + 1`
done
echo
echo $1 process is stopped!!!
echo

## Case statement scripts ( optional )

#!/bin/bash
echo
echo "please choose one of the option"
echo
echo 'a = display date and time'
echo 'b = list file and directories'
echo 'c = list users looged in'
echo 'd = check system uptime'
echo

read choices
case $choices in

a) date;;
b) ls;;
c) who;;
d) uptime;;
*) echo invalid choice - bye.
esac

